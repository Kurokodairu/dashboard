# =========================
# Runtime server settings
# =========================
PORT=3000
NODE_ENV=production

# =========================
# Dev-only Vite proxy target
# (ignored in production)
# =========================
VITE_API_PROXY_TARGET=http://localhost:3000

# =========================
# Twitch API
# =========================
# From https://dev.twitch.tv/console/apps
VITE_TWITCH_CLIENT_ID=your_twitch_client_id
VITE_TWITCH_REDIRECT_URI=http://localhost:5173

# Optional non-VITE fallback keys read by /api/config
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_REDIRECT_URI=http://localhost:5173

# =========================
# OpenAI (VG summaries)
# =========================
# From https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =========================
# Google Calendar API
# =========================
# From Google Cloud Console
GOOGLE_CALENDAR_API_KEY=

# Optional default calendar if user has not set one in Settings.
# Can be a calendar id/email or full Google Calendar link.
GOOGLE_CALENDAR_ID=
